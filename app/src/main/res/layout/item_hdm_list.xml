<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_hdm_ln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线路名称："
            android:layout_margin="@dimen/Margin_5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_hdm_item_line_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_hdm_ln"
            android:text="xx线路"
            android:layout_marginTop="@dimen/Margin_5dp"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_hdm_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Margin_5dp"
            android:text="隐患描述："
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_hdm_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_hdm_des"
            android:text="xx问题"
            android:layout_marginTop="@dimen/Margin_5dp"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17sp"
        android:paddingBottom="17sp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_hdm_sc"
                android:layout_width="80dp"
                android:layout_height="@dimen/dp_40"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_btn_sure_bg"
                android:text="特巡"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_hdm_sc_record"
                android:layout_width="80dp"
                android:layout_height="@dimen/dp_40"
                android:layout_centerInParent="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/shape_btn_sure_bg"
                android:text="特巡记录"
                android:textColor="@color/white" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>