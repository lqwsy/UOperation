<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View style="@style/view_Style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:padding="@dimen/view_padding_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="消缺备注："
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_solve_defect_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@null"
            android:enabled="true"
            android:gravity="top"
            android:maxLines="10"
            android:minLines="6"
            android:scrollbars="vertical"/>
    </LinearLayout>

    <View style="@style/view_Style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/view_padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/view_padding_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="消缺图片："
            android:textSize="16sp"/>

        <com.uflycn.uoperation.widget.AddImageGridView
            android:id="@+id/add_img_defect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:numColumns="3"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp"
            android:columnWidth="50dp"/>
    </LinearLayout>



</LinearLayout>