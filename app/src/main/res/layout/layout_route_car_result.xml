<?xml version="1.0" encoding="utf-8"?>
<com.uflycn.uoperation.widget.CarRoutePanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rt_car_result_toggle_contener"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/rt_car_result_list_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6.0dip"
            android:src="@drawable/rt_car_result_list_toggle" />

        <View
            android:id="@+id/rt_car_result_toggle_blank"
            android:layout_width="wrap_content"
            android:layout_height="6.0dip" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.uflycn.uoperation.widget.RouteCarTagMapView
            android:id="@+id/car_tag_left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_weight="1.0" />

        <com.uflycn.uoperation.widget.RouteCarTagMapView
            android:id="@+id/car_tag_center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_weight="1.0" />

        <com.uflycn.uoperation.widget.RouteCarTagMapView
            android:id="@+id/car_tag_right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_weight="1.0" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/car_footer_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:paddingLeft="7.0dip"
        android:paddingRight="7.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3.0dip"
            android:clickable="false"
            android:minHeight="20.0dip"
            android:orientation="vertical"
            android:paddingBottom="1.0dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center|left"
                    android:paddingTop="4.0dip"
                    android:text="红绿灯"
                    android:textColor="#ff757575"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/group_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center|left"
                    android:paddingTop="4.0dip"
                    android:text=""
                    android:textColor="#ff757575"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:clickable="false"
                    android:paddingBottom="5.0dip"
                    android:text="出租车"
                    android:textColor="#ff757575"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/car_footer_sub_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.0dip"
                    android:clickable="false"
                    android:paddingBottom="5.0dip"
                    android:text=""
                    android:textColor="#ff757575"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#ffe0e0e0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48.0dip"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_button_out"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="48.0dip"
                    android:background="@drawable/tap_selector"
                    android:baselineAligned="false"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tip_btn3_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:drawablePadding="6dp"
                        android:drawableLeft="@drawable/ic_clearroute"

                        android:gravity="center_vertical"
                        android:text="取消"
                        android:textColor="#ff0000"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#ffe0e0e0"
                    android:padding="3dp"/>

                <RelativeLayout
                    android:id="@+id/layout_button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="48.0dip"
                    android:background="@drawable/tap_selector"
                    android:baselineAligned="false"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tip_btn3_1005"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/tips_navi_new1"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"
                        android:text="导航"
                        android:textColor="#ff4287ff"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>



            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#ffe0e0e0" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_clear_car_route"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:background="@drawable/tap_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="清除导航线路"
            android:layout_centerInParent="true"
            android:textColor="#ff4287ff"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>
</com.uflycn.uoperation.widget.CarRoutePanel>