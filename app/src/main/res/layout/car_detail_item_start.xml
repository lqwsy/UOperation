<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0.0dip">

    <RelativeLayout
        android:id="@+id/start_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/car_detail_item_selector"
        android:minHeight="62.0dip">

        <View
            android:id="@+id/start_item_top_line"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentTop="true"
            android:background="#ffe0e0e0" />

        <LinearLayout
            android:id="@+id/section_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="22.0dip">

            <ImageView
                android:id="@+id/section_name_icon"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:background="@drawable/driver_direction_bus_list_start_line"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/section_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.0dip"
                android:layout_marginRight="14.0dip"
                android:background="@null"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center|left"
                android:text="从我的位置出发"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="64.0dip"
            android:background="#ffe0e0e0" />
    </RelativeLayout>
</RelativeLayout>