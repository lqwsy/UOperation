<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hdm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/Margin_5dp"
                android:text="新建隐患"
                android:textColor="@color/black_1"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_hdm_line_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/Margin_5dp"
                        android:text="线路名称："
                        android:textColor="@color/black_1"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/sp_hdm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_hdm_line_name"></Spinner>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_hdm_hd_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/Margin_5dp"
                        android:text="隐患名称："
                        android:textColor="@color/black_1"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_hdm_hd_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/Margin_5dp"
                        android:layout_marginRight="@dimen/Margin_5dp"
                        android:layout_marginTop="@dimen/Margin_5dp"
                        android:layout_toRightOf="@id/tv_hdm_hd_name"
                        android:background="@drawable/shape_et_bg"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_from_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/Margin_5dp"
                            android:text="区段："
                            android:textColor="@color/black_1"
                            android:textSize="17sp" />

                        <Spinner
                            android:id="@+id/sp_hdm_from"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_from_name"></Spinner>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_to_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/Margin_5dp"
                            android:text="至"
                            android:textColor="@color/black_1"
                            android:textSize="17sp" />

                        <Spinner
                            android:id="@+id/sp_hdm_to"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/sp_hdm_to"></Spinner>

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_hdm_hd_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="39sp"
                        android:text="班组："
                        android:textColor="@color/black_1"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/sp_hdm_team"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_hdm_hd_team"></Spinner>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_hdm_hd_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/Margin_5dp"
                        android:text="发现时间："
                        android:textColor="@color/black_1"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_hdm_hd_time"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/Margin_5dp"
                        android:layout_marginRight="@dimen/Margin_5dp"
                        android:layout_marginTop="@dimen/Margin_5dp"
                        android:layout_toRightOf="@id/tv_hdm_hd_time"
                        android:background="@drawable/shape_et_bg"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_hdm_line_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/Margin_5dp"
                        android:text="隐患类型："
                        android:textColor="@color/black_1"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/sp_hdm_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_hdm_line_type"></Spinner>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_hdm_hd_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22sp"
                        android:text="发现人："
                        android:textColor="@color/black_1"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_hdm_hd_person"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/Margin_5dp"
                        android:layout_marginRight="@dimen/Margin_5dp"
                        android:layout_marginTop="@dimen/Margin_5dp"
                        android:layout_toRightOf="@id/tv_hdm_hd_person"
                        android:background="@drawable/shape_et_bg"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_hdm_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/Margin_5dp"
                        android:text="隐患等级："
                        android:textColor="@color/black_1"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/sp_hdm_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_hdm_level"></Spinner>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_hdm_hd_responsible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22sp"
                        android:text="责任人："
                        android:textColor="@color/black_1"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_hdm_hd_responsible"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/Margin_5dp"
                        android:layout_marginRight="@dimen/Margin_5dp"
                        android:layout_marginTop="@dimen/Margin_5dp"
                        android:layout_toRightOf="@id/tv_hdm_hd_responsible"
                        android:background="@drawable/shape_et_bg"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_hdm_line_region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/Margin_5dp"
                        android:text="行政区域："
                        android:textColor="@color/black_1"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_hdm_hd_region"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/Margin_5dp"
                        android:layout_marginRight="@dimen/Margin_5dp"
                        android:layout_marginTop="@dimen/Margin_5dp"
                        android:layout_toRightOf="@id/tv_hdm_line_region"
                        android:background="@drawable/shape_et_bg"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hdm_hd_wire_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/Margin_5dp"
                    android:text="导线对地距离(米)："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_hdm_hd_wire_distance"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/Margin_5dp"
                    android:layout_marginRight="@dimen/Margin_5dp"
                    android:layout_marginTop="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/tv_hdm_hd_wire_distance"
                    android:background="@drawable/shape_et_bg"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hdm_basic_situation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Margin_5dp"
                    android:text="基本情况："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_hdm_basic_situation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/Margin_5dp"
                    android:layout_marginRight="@dimen/Margin_5dp"
                    android:layout_marginTop="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/tv_hdm_basic_situation"
                    android:background="@drawable/shape_et_bg"
                    android:gravity="top"
                    android:maxLines="3"
                    android:minLines="3"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbars="vertical"
                    android:textColor="@color/black"
                    android:textSize="17sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black_10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/Margin_5dp"
                android:text="施工、业主、特种车辆等信息"
                android:textColor="@color/black_1"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black_10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hdm_construction_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/Margin_5dp"
                    android:text="施工单位："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_hdm_hd__construction_unit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/Margin_5dp"
                    android:layout_marginRight="@dimen/Margin_5dp"
                    android:layout_marginTop="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/tv_hdm_construction_unit"
                    android:background="@drawable/shape_et_bg"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hdm_ccharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22sp"
                    android:text="负责人："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_hdm_hd_ccharge"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/Margin_5dp"
                    android:layout_marginRight="@dimen/Margin_5dp"
                    android:layout_marginTop="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/tv_hdm_ccharge"
                    android:background="@drawable/shape_et_bg"
                    android:inputType="text"
                    android:maxEms="4"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_hdm_cphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/et_hdm_hd_ccharge"
                    android:text="电话："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_hdm_hd_cphone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/Margin_5dp"
                    android:layout_marginRight="@dimen/Margin_5dp"
                    android:layout_marginTop="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/tv_hdm_cphone"
                    android:background="@drawable/shape_et_bg"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hdm_owner_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/Margin_5dp"
                    android:text="业主单位："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_hdm_hd__owner_unit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/Margin_5dp"
                    android:layout_marginRight="@dimen/Margin_5dp"
                    android:layout_marginTop="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/tv_hdm_owner_unit"
                    android:background="@drawable/shape_et_bg"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hdm_ocharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22sp"
                    android:text="负责人："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_hdm_hd_ocharge"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/Margin_5dp"
                    android:layout_marginRight="@dimen/Margin_5dp"
                    android:layout_marginTop="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/tv_hdm_ocharge"
                    android:background="@drawable/shape_et_bg"
                    android:inputType="text"
                    android:maxEms="4"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_hdm_ophone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/et_hdm_hd_ocharge"
                    android:text="电话："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_hdm_hd_ocphone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/Margin_5dp"
                    android:layout_marginRight="@dimen/Margin_5dp"
                    android:layout_marginTop="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/tv_hdm_ophone"
                    android:background="@drawable/shape_et_bg"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hdm_car_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/Margin_5dp"
                    android:text="车辆负责人："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_hdm_hd_car_charge"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/Margin_5dp"
                    android:layout_marginRight="@dimen/Margin_5dp"
                    android:layout_marginTop="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/tv_hdm_car_charge"
                    android:background="@drawable/shape_et_bg"
                    android:inputType="text"
                    android:maxEms="4"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_hdm_car_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/et_hdm_hd_car_charge"
                    android:text="电话："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_hdm_hd_car_phone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/Margin_5dp"
                    android:layout_marginRight="@dimen/Margin_5dp"
                    android:layout_marginTop="@dimen/Margin_5dp"
                    android:layout_toRightOf="@id/tv_hdm_car_phone"
                    android:background="@drawable/shape_et_bg"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hdm_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="39sp"
                    android:text="图片："
                    android:textColor="@color/black_1"
                    android:textSize="17sp" />

                <com.uflycn.uoperation.widget.AddImageGridView
                    android:id="@+id/aigv_hdm_add_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_hdm_img"
                    android:columnWidth="50dp"
                    android:horizontalSpacing="2dp"
                    android:numColumns="3"
                    android:padding="8dp"
                    android:verticalSpacing="2dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/Margin_20dp">

                <Button
                    android:id="@+id/btn_hdm_commit"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shape_btn_sure_bg"
                    android:text="添加"
                    android:textColor="@color/white" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>