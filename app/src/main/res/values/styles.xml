<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">@null</item>
    </style>

    <style name="line_hor_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white_4</item>
    </style>

    <style name="ExpandableView_TextView">
        <!-- Base style to customize inner TextView inside visible content -->
    </style>


    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_18_sp</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/text_20_dp</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>

    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_slid_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_slid_out</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">#00000000</item>
    </style>
    <!--android:style/Theme.Dialog-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#ffffffff</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="work_order_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>s
        <item name="android:textSize">12sp</item>
    </style>

    <style name="linearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="verticalLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="text_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="text_Style1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="edit_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="view_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@color/black_10</item>
    </style>

    <style name="header_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@drawable/bg_navbar_no_line</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="header_text_view" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#e5e9ec</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">标题</item>
    </style>
    <!-- 页面头部  返回按钮样式 -->
    <style name="header_button_back" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#e5e9ec</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:text"></item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:background">@drawable/btn_title_selector</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">20dip</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>
    <style name="my_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/stroke_tv_green_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">#00C69A</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
